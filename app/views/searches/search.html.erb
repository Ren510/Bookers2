 <div class="container">
  <div class="row">
   <h2>Books search for "test"</h2>
   <!--books一覧 -->
   <table class="table table-hover table-inverse">
   　<% if @range == '2' %>
     <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
     </thead>
  
     <tbody>
     <% @book.each do |book| %>
      <tr>
      <td>
      <%= link_to(book.user) do %>
      <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg',fallback: 'sample-author1.jpeg',size: '30x30' %>
     <% end %>
      </td>
      <td>
     <%= link_to book.title, book, class: "book_#{book.id}" %>
      </td>
      <td><%= book.body %></td>
      </tr>
     <% end %>
     </tbody>
  
     <% else %>
     <thead>
      <tr>
       <th>image</th>
       <th>name</th>
       <th colspan="3"></th>
      </tr>
     </thead>
  
     <tbody>
     <% @user.each do |user| %>
      <tr>
      <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, format: 'jpeg',fallback: 'sample-author1.jpeg',size: '30x30' %></td>
      <td><%= user.name%></td>
      <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
      </tr>
     <% end %>
     </tbody>
     <% end %>
     </table>
  </div>
 </div>