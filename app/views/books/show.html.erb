  <%= flash[:notice] %>
    <%= render 'users/user', user: @user,book: @new_book %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table">
            <tr>
              <td><%= link_to books_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: 'sample-author1.jpeg',size: '30x30' %><br>
                  <%= @user.name %>
                  <% end %>
              </td>
              <td><%= link_to book_path(@book) do %>
                  <%= @book.title %>
                  <% end %>
              </td>
              <td><%= @book.body %>
              </td>
              <%# いいね %>
              <td id="favorites_buttons_<%= @book.id %>">
                <%= render 'favorites/favorite',book: @book %>
              </td>
              <%# いいね %>
              <% if @book.user == current_user %>
                <!--<div class="comments">-->
                  <td>コメント数：<%= @book.book_comments.count %></td>
                  <% @book.book_comments.each do |book_comment| %>

                    <%= @book.user.name %>
                    <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
                  <% end %>
                <td><%= link_to "Edit",edit_book_path(@book) ,class: "btn btn-sm btn-success edit_book_23722" %></td>
                <td><%= link_to "Destroy",book_path(@book),method: :delete,"data-confirm" => "本当に消しますか？",class: "btn btn-sm btn-danger destroy_book_23722" %></td>
              <% end %>
            </tr>
            <tr>




            </tr>
          </table>
          <table>
            <div>
                <div class="comments_index">
                  <div id='comments_area'>
                    <%= render partial: 'book_comments/index', locals: { book_comment: @book_comment } %>
                  </div>
                </div>
          </table>
                <% if user_signed_in? %>
                  <%= render partial: 'book_comments/form', locals: { book_comment: @book_comment, book: @book } %>
                <% end %>
                <% if @book_comment.user_id == current_user.id %>
                  <div class="comment-delete">
                    <%= link_to "削除", book_book_comment_path(@book,@book_comment), method: :delete %>
                  </div>
                <% end %>

            </div>
        </div>
          <div class="container mt-5">
            <div class="row">
              <div class="mx-auto">
                <p>CopyRight Infratop.inc</p>
              </div>
            </div>
          </div>
        </div>
      </div>
