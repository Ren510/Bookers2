  <%= flash[:notice] %>
    <%= render 'users/user', user: @user,book: @new_book %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table">
            <tr>
              <td><%= link_to books_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: 'sample-author1.jpeg',size: '30x30' %><br>
                  <%= @user.name %>
                  <% end %>
              </td>
              <td><%= link_to book_path(@book) do %>
                  <%= @book.title %>
                  <% end %>
              </td>
              <td><%= @book.body %>
              </td>
              <%# いいね %>
              <td id="favorites_buttons_<%= @book.id %>">
                <%= render 'favorites/favorite',book: @book %>
              </td>
              <%# いいね %>
                <!--<div class="comments">-->
                <td>コメント数：<%= @book.book_comments.count %>
                <td><%= link_to "Edit",edit_book_path(@book) ,class: "btn btn-sm btn-success edit_book_23722" %></td>
                <td><%= link_to "Destroy",book_path(@book),method: :delete,"data-confirm" => "本当に消しますか？",class: "btn btn-sm btn-danger destroy_book_23722" %></td>
            </tr>
          </table>
          <table>
            <tbody id='comments_area'>
              <%= render partial: 'book_comments/index', locals: { book: @book } %>
            </tbody>
          </table>
          <% if user_signed_in? %>
            <%= render partial: 'book_comments/form', locals: { book_comment: @book_comment, book: @book } %>
          <% end %>
      </div>
      <div class="container mt-5">
            <div class="row">
              <div class="mx-auto">
                <p>CopyRight Infratop.inc</p>
              </div>
            </div>
          </div>

