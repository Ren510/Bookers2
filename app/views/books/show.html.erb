  <%= flash[:notice] %>
  <%= render 'users/user', user: @user,book: @new_book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
    	   <table class="table">
    	      <tr>
      	        <td><%= link_to user_path(@user) do %>
      	        <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: 'no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6',size: '30x30' %><br>
      	        <%= @user.name %>
      	        <% end %>
      	        </td>
      	        <td><%= link_to book_path(@book) do %>
        	        <%= @book.title %>
        	        <% end %>
        	      </td>
      	        <td>
      	          <%= @book.body %>
      	        </td>
      	        <% if @book.user == current_user %>
                <td><%= link_to "Edit",edit_book_path(@book) ,class: "btn btn-sm btn-success edit_book_23722" %></td>
                <td><%= link_to "Destroy",book_path(@book),method: :delete,"data-confirm" => "本当に消しますか？",class: "btn btn-sm btn-danger destroy_book_23722" %></td>
                <% end %>
            </tr>
            
            <div class="comments">
              <p>コメント件数：<%= @book.post_comments.count %></p>
              <% @book.post_comments.each do |post_comment| %>
                <p><%= image_tag('sample-author1.jpg') %></p>
                <%= book.user.name %>
                <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
              <% end %>
            </div>
            <div class="new-comment">
              <%= form_with(model:[@book, @post_comment], local: true) do |f| %>
                <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
                <%= f.submit "送信する" %>
              <% end %>
            </div>
            
        </table>
      </div>
       <div class="container mt-5">
        <div class="row">
        	<div class="mx-auto">
        		<p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>