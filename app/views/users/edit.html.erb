 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>User info</h2>
   <% if @book.errors.any? %>
    <div class = "alert">
      <div class= "alert-box">
        <h3>2 errors prohibited this book from being saved:</h3>
        <% @book.errors.full_messages.each do |message| %>
        <div class="error_explanation"></div>
        <%= message %>
        <% end %>
      </div>
    </div>
   <% end %>

    <div class="form-group">
     <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
    </div>

    <div class="form-group">
     <label for="inputImage">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder:"プロフィール画像" %>
    </div>

    <div class="form-group">
     <label for="inputIntroduction">Introduction</label>
    <%= f.text_area :introduction, placeholder:"紹介文" %>
    </div>

    <div class="form-group">
    <%= f.submit 'Update User',class:"btn btn-secondary" %>
    </div>
    <% end %>
  </div>
 </div>